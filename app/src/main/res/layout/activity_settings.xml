<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:gravity="center"
    tools:context=".SettingsActivity">


    <TextView
        android:textColor="@color/lavender"
        android:id="@+id/NMID"
        android:background="@drawable/bg_blank_round"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold" />




    <Button
        android:backgroundTint="@color/lavender"
        android:background="@drawable/bg_blank_round"
        android:id="@+id/UpdateProfileID"
        android:layout_marginTop="25dp"
        android:layout_below="@id/NMID"
        android:text="Update Profile"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:textStyle="bold"
        android:textColor="@color/lavender"
        android:layout_marginTop="20dp"
        android:id="@+id/dpreferID"
        android:layout_below="@id/UpdateProfileID"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="Driver Preference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Spinner
        android:layout_marginTop="25dp"
        android:layout_below="@id/dpreferID"
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu" />




</RelativeLayout>